<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- Anthropic API Client -->
        <service id="Vivatura\VivaturaTranslator\Service\AnthropicClient">
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService"/>
            <argument type="service" id="logger"/>
        </service>

        <!-- Translation Service -->
        <service id="Vivatura\VivaturaTranslator\Service\TranslationService">
            <argument type="service" id="Vivatura\VivaturaTranslator\Service\AnthropicClient"/>
            <argument type="service" id="Vivatura\VivaturaTranslator\Service\ContentExtractor"/>
            <argument type="service" id="product.repository"/>
            <argument type="service" id="cms_page.repository"/>
            <argument type="service" id="snippet.repository"/>
            <argument type="service" id="snippet_set.repository"/>
            <argument type="service" id="language.repository"/>
            <argument type="service" id="viv_translator_language_prompt.repository" on-invalid="null"/>
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService"/>
            <argument type="service" id="cms_slot.repository"/>
            <argument type="service" id="logger"/>
        </service>

        <!-- Content Extractor -->
        <service id="Vivatura\VivaturaTranslator\Service\ContentExtractor">
            <argument type="service" id="logger"/>
        </service>

        <!-- Snippet File Scanner -->
        <service id="Vivatura\VivaturaTranslator\Service\SnippetFileScanner">
            <argument>%kernel.project_dir%</argument>
        </service>

        <!-- Message Handler for async translation -->
        <service id="Vivatura\VivaturaTranslator\MessageHandler\TranslationMessageHandler">
            <argument type="service" id="Vivatura\VivaturaTranslator\Service\TranslationService"/>
            <argument type="service" id="viv_translator_job.repository"/>
            <argument type="service" id="logger"/>
            <tag name="messenger.message_handler"/>
        </service>

        <!-- API Controller -->
        <service id="Vivatura\VivaturaTranslator\Controller\Api\TranslationController" public="true">
            <argument type="service" id="Vivatura\VivaturaTranslator\Service\TranslationService"/>
            <argument type="service" id="language.repository"/>
            <argument type="service" id="product.repository"/>
            <argument type="service" id="cms_page.repository"/>
            <argument type="service" id="snippet_set.repository"/>
            <argument type="service" id="snippet.repository"/>
            <argument type="service" id="viv_translator_job.repository"/>
            <argument type="service" id="messenger.default_bus"/>
            <argument type="service" id="Vivatura\VivaturaTranslator\Service\SnippetFileScanner"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
            <tag name="controller.service_arguments"/>
        </service>

        <!-- Entity Definitions -->
        <service id="Vivatura\VivaturaTranslator\Entity\LanguagePromptDefinition">
            <tag name="shopware.entity.definition" entity="viv_translator_language_prompt"/>
        </service>

        <service id="Vivatura\VivaturaTranslator\Entity\TranslationJobDefinition">
            <tag name="shopware.entity.definition" entity="viv_translator_job"/>
        </service>
    </services>
</container>
